<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.mapfragment.example"
		  android:versionCode="1"
		  android:versionName="1.0">

	<uses-sdk android:minSdkVersion="8"/>
	<uses-permission android:name="android.permission.INTERNET"/>

	<application
			android:icon="@drawable/ic_launcher"
			android:label="@string/app_name"
			android:theme="@style/Theme.Sherlock">

		<uses-library android:name="com.google.android.maps"/>

        <!-- It's important not to forget to define the MapActivity -->
		<activity android:label="@string/app_name" android:name="com.mapfragment.library.DefaultMapActivity"/>
		<activity android:label="@string/app_name" android:name="com.mapfragment.example.OtherFragmentActivity"/>
		<activity android:label="@string/app_name" android:name="com.mapfragment.example.MainFragmentActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
	</application>

</manifest>